{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": ["standard", "plugin:jest/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "jest"],
    "rules": {
        "indent": ["warn", 4],
        "semi": "off",
        "space-before-function-paren": "off"
    }
}
